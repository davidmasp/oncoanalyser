nextflow_workflow {

    name "Test flagstat subworkflow"
    script "subworkflows/local/flagstat_metrics/main.nf"
    workflow "FLAGSTAT_METRICS"
    profile "docker"

    test("WGTS COLO829 mini") {

        setup {
            run("PREPARE_INPUTS") {
                script "subworkflows/local/prepare_inputs/main.nf"
                process {
                    """
                    input[0] = '${baseDir}/tests/samplesheets/wgts.dna_rna.single.csv'
                    """
                }
            }
        }

        when {
            params {
                outdir = "${outputDir}"

                max_cpus = 1
                max_memory = "10.GB"
            }
            workflow {
                """
                input[0] = PREPARE_INPUTS.out.inputs
                """
            }
        }

        then {
            assert workflow.success
        }

    }
}
