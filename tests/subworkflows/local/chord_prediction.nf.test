nextflow_workflow {

    name "Test CHORD subworkflow"
    script "subworkflows/local/chord_prediction.nf"
    workflow "CHORD_PREDICTION"
    profile "docker"

    test("WGTS COLO829 mini") {

        setup {
            run("PREPARE_INPUTS") {
                script "subworkflows/local/prepare_inputs.nf"
                process {
                    """
                    input[0] = '${baseDir}/tests/samplesheets/wgts.dna.single.csv'
                    """
                }
            }
        }

        when {
            params {
                outdir "${outputDir}"

                max_cpus = 1
                max_memory = "10.GB"
            }
            workflow {
                """
                input[0] = PREPARE_INPUTS.out.inputs
                input[1] = PREPARE_INPUTS.out.inputs.combine(
		    Channel.of('${baseDir}/test_data/module_data/purple/')
                )
                input[2] = '38'
                """
            }
        }

        then {
            assert workflow.success
        }

    }
}
